<div class="clear"></div>


<p id="notice"><%= notice %></p>

<section id="sidebar">

  <h1>Listen</h1>
  <section id="audio">
    No song is currently playing


  </section>
</section>
<section id="main">

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h1>Songs</h1>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.key %></td>
        <td><%= link_to "Play", song.public_url(), :class => "play_song btn btn-sm btn-primary" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</section>
<br>

<%= link_to 'New Song', new_song_path, :class => "btn btn-lg btn-primary" %>
